{
  "compilerOptions": {
    "noEmit": true,
    "target": "es6",
    "lib": ["dom", "es6"],  
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
